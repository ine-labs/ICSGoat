<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*announcements</name>
		<declaration>
			<field>
				<name>announcement_id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>4</length>
			</field>
			<field>
				<name>announcement_time</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<length>4</length>
			</field>
			<field>
				<name>announcement_user</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>announcement_subject</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>512</length>
			</field>
			<field>
				<name>announcement_message</name>
				<type>clob</type>
				<notnull>false</notnull>
			</field>
		</declaration>
	</table>
</database>
