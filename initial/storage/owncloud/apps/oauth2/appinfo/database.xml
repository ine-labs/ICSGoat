<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*oauth2_clients</name>
        <declaration>
            <field>
            	<name>id</name>
            	<type>integer</type>
            	<notnull>true</notnull>
            	<autoincrement>true</autoincrement>
            	<unsigned>true</unsigned>
            	<primary>true</primary>
            </field>
            <field>
                <name>identifier</name>
                <type>text</type>
                <length>64</length>
                <notnull>true</notnull>
            </field>
            <field>
                <name>secret</name>
                <type>text</type>
                <length>64</length>
                <notnull>true</notnull>
            </field>
            <field>
                <name>redirect_uri</name>
                <type>text</type>
                <length>2000</length>
                <notnull>true</notnull>
            </field>
            <field>
                <name>name</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>80</length>
            </field>
            <field>
                <name>allow_subdomains</name>
                <type>boolean</type>
                <default>false</default>
                <notnull>true</notnull>
            </field>
            <index>
                <name>name_idx</name>
                <unique>true</unique>
                <field>
                    <name>name</name>
                    <sorting>ascending</sorting>
                </field>
            </index>
        </declaration>
    </table>
    <table>
        <name>*dbprefix*oauth2_auth_codes</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
                <unsigned>true</unsigned>
                <primary>true</primary>
            </field>
            <field>
                <name>code</name>
                <type>text</type>
                <length>64</length>
                <notnull>true</notnull>
            </field>
            <field>
                <name>client_id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <unsigned>true</unsigned>
            </field>
            <field>
                <name>user_id</name>
                <type>text</type>
                <length>64</length>
                <notnull>true</notnull>
            </field>
            <field>
                <name>expires</name>
                <type>integer</type>
                <unsigned>true</unsigned>
                <notnull>true</notnull>
            </field>
        </declaration>
    </table>
    <table>
        <name>*dbprefix*oauth2_access_tokens</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
                <unsigned>true</unsigned>
                <primary>true</primary>
            </field>
            <field>
                <name>token</name>
                <type>text</type>
                <length>64</length>
                <notnull>true</notnull>
            </field>
            <field>
                <name>client_id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <unsigned>true</unsigned>
            </field>
            <field>
                <name>user_id</name>
                <type>text</type>
                <length>64</length>
                <notnull>true</notnull>
            </field>
            <field>
                <name>expires</name>
                <type>integer</type>
                <unsigned>true</unsigned>
                <notnull>true</notnull>
            </field>
        </declaration>
    </table>
    <table>
        <name>*dbprefix*oauth2_refresh_tokens</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
                <unsigned>true</unsigned>
                <primary>true</primary>
            </field>
            <field>
                <name>token</name>
                <type>text</type>
                <length>64</length>
                <notnull>true</notnull>
            </field>
            <field>
                <name>client_id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <unsigned>true</unsigned>
            </field>
            <field>
                <name>user_id</name>
                <type>text</type>
                <length>64</length>
                <notnull>true</notnull>
            </field>
        </declaration>
    </table>
</database>
